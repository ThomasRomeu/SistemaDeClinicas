@page
@model SistemaDeClinicas._Pages_Pacientes.CreateModel
@section scripts{
<partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = "Crear Paciente";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h4 class="text-center text-info">Crear Paciente</h4>
                
                <form method="post" class="row g-3">
                   
                    
                    <div class="col-md-8">
                        <label class="form-label" asp-for="Paciente.Nombre">Nombre</label>
                        <input class="form-control" asp-for="Paciente.Nombre" />
                        <span class="badge bg-danger" asp-validation-for="Paciente.Nombre" ></span>
                    </div>
                    
                    <div class="col-md-8">
                        <label class="form-label" asp-for="Paciente.Apellido">Apellido</label>
                        <input class="form-control" asp-for="Paciente.Apellido" />
                        <span class="badge bg-danger" asp-validation-for="Paciente.Apellido" ></span>
                    </div>
                    
                    <div class="col-md-8">
                        <label class="form-label" asp-for="Paciente.NroDoc">Nro de Documento</label>
                        <input class="form-control" asp-for="Paciente.NroDoc" />
                        <span class="badge bg-danger" asp-validation-for="Paciente.NroDoc" ></span>
                    </div>

                    <div class="col-md-8">
                        <label class="form-label" asp-for="Paciente.NroHistoriaClinica">Nro de Historia Clinica</label>
                        <input class="form-control" asp-for="Paciente.NroHistoriaClinica" />
                        <span class="badge bg-danger" asp-validation-for="Paciente.NroHistoriaClinica" ></span>
                    </div>
                                                           
                    <div >
                        <input class="btn btn-success btn-sm" type="submit" value="Guardar" />
                    </div>

                </form>
        </div>
    </div>
    <a asp-page="Index" class="btn btn-primary btn-sm">Volver al listado</a>
</div>

